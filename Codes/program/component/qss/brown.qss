QWidget {
    background-color: #2D2D30;
    color: #000000;
}

QPushButton {
    background-color: #4A4A4D;
    border: none;
    color: white;
    padding: 10px;
    min-width: 80px;
}

QPushButton:hover {
    background-color: #666666;
}

QPushButton:pressed {
    background-color: #808080;
}

QSlider {
    background-color: #333333;
}

QSlider::groove {
    background-color: #4A4A4D;
}

QSlider::handle {
    background-color: #666666;
    border: none;
    border-radius: 0px;
    width: 10px;
    height: 20px;
}

QListView {
    background-color: #333333;
    color: white;
}

QListView::item {
    padding: 5px;
}

QListView::item:selected {
    background-color: #4A4A4D;
}

QLineEdit {
    background-color: #4A4A4D;
    color: white;
    border: none;
}

QSplitter::handle {
    background-color: #4A4A4D;
}

QScrollBar {
    background-color: #333333;
}

QScrollBar::handle {
    background-color: #4A4A4D;
}

QScrollBar::add-line, QScrollBar::sub-line {
    background-color: #4A4A4D;
}

QScrollBar::add-page, QScrollBar::sub-page {
    background-color: #333333;
}

